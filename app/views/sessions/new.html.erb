<h1 class="text-center my-4">Log in</h1>

<div class="container col-5">
  <%= form_with(scope: :session, url: login_path) do |f| %>
    <div class="container shadow p-4 bg-secondary rounded">
      <div class="form-group row">
        <%= f.label :email, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control"  %><br/>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-label" %><br/>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password"  %>
        </div>
      </div>
    </div>

    <div class="shadow rounded mt-2" style="float: right">
      <a type="button"> <%= f.submit "Log in", class: "btn btn-outline-success" %> </a>
      <a type="button"> <%= link_to 'Cancel', signup_path, class: "btn btn-outline-danger" %> </a>
    </div>
  <% end %>
</div>